{
    "platform": {
        "apiRuntime": "node:20"
    },
    "navigationFallback": {
        "rewrite": "/index.html"
    },
    "routes": [
        {
            "route": "/api/*",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ],
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        }
    ]
}